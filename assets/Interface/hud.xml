<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <screen id="hud" controller="mygame.HudScreenState">
        <layer id="background" childLayout="center">
            <image filename="Interface/hud.png" imageMode="resize:40,490,110,170,40,560,40,270,40,560,40,40" width="100%" height="100%"></image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="top" height="90%" width="100%" childLayout="vertical" ></panel>
            <panel id="bottom" height="10%" width="100%" childLayout="vertical" backgroundColor="#000f">
                <panel id="score" height="9%" width="50%" childLayout="center">
                    <text text="Score: ${CALL.getScore()}" font="Interface/Fonts/Arial.fnt" width="50%" height="100%" />
                </panel>
                <panel id="panel-time" height="9%" width="100%" childLayout="center"> 
                    <text id="time" text="Time" font="Interface/Fonts/Arial.fnt" width="50%" height="100%">
                        <interact onClick="doNothing()"/>
                    </text>
                </panel>  
            </panel>
        </layer>
     
    </screen>
</nifty>
