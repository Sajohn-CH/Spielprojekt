<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="mygame.MyScreenStart">
        <layer id="background" backgroundColor="#000f">
            
        </layer>
        <layer id="foreground" backgriondColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <text text="hello" font="Interface/Fonts/Arial.fnt" width="100%" height="100%" />
            </panel>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
            </panel>
             <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8">
            </panel>
             <panel id="panel_bottom_left" height="50%" width="50%" align="center" childLayout="center" backgroundColor="#44f8">
                <control visibleToMouse="true" name="button" label="Start" id="StartButton" align="center" valign="center"> 
                    <interact onClick="startGame(hud)"/>
                </control>
             </panel>
             <panel id="panel_bottom_right" height="50%" width="50%" align="center" childLayout="center" backgroundColor="#88f8">
                <control visibleToMouse="true" name="button" label="Quit" id="QuitButton" align="center" valign="center"> 
                     <interact onClick="quitGame()"/>
                </control>
             </panel>
        </layer>
    </screen>
    <screen id="hud">
        <layer id="background" backgroundColor="#000f">
            
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="horizontal">
            <panel id="panel_left" height="100%" width="80%" childLayout="vertical" backgroundColor="#f008">
                
            </panel>
            <panel id="panel_right" height="100%" width="20%" childLayout="vertical" backgroundColor="#00f8">
            </panel>
            <panel id="panel_topright1" height="15%" width="100%" childLayout="center" backgroundColor="#00f8">
            </panel>
            <panel id="panel_topright2" height="15%" width="100%" childLayout="center" backgroundColor="#44f8">
            </panel>
            <panel id="panel_bot_right" height="70%" width="100%" align="center" childLayout="center" backgroundColor="#88f8">
            </panel>
        </layer>
    </screen>
</nifty>
